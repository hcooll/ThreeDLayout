<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PathTextActivity">

    <com.wingsofts.threedlayout.ThreeDRotateView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:childHeight="50dp"
        app:childWidth="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:margin_ovalHeight="100dp"
        app:margin_ovalWidth="50dp">

        <com.wingsofts.threedlayout.ThreeDTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:text="112345"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/background_dark"
            android:text="112345"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <com.wingsofts.threedlayout.ThreeDLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_orange_dark">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/background_dark"
                android:text="112345"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp" />
        </com.wingsofts.threedlayout.ThreeDLayout>

        <com.wingsofts.threedlayout.ThreeDLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp" />
        </com.wingsofts.threedlayout.ThreeDLayout>

        <com.wingsofts.threedlayout.ThreeDLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp" />
        </com.wingsofts.threedlayout.ThreeDLayout>

        <com.wingsofts.threedlayout.ThreeDLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp" />
        </com.wingsofts.threedlayout.ThreeDLayout>

        <com.wingsofts.threedlayout.ThreeDLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp" />
        </com.wingsofts.threedlayout.ThreeDLayout>

        <com.wingsofts.threedlayout.ThreeDLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp" />
        </com.wingsofts.threedlayout.ThreeDLayout>

    </com.wingsofts.threedlayout.ThreeDRotateView>
</android.support.constraint.ConstraintLayout>